---
import Badge from '../ui/Badge.astro';
import type { TrendingItem } from '../../utils/constants';
import { API_BASE_URL } from '../../utils/constants';

interface Props {
  items: TrendingItem[];
  isLoading?: boolean;
}

const { items, isLoading = false } = Astro.props;

function getTenantUrl(item: TrendingItem): string {
  const basePath = item.contentType === 'article' ? 'library' : 'lists';
  return `https://${item.publisherId}.${API_BASE_URL}/${basePath}/${item.contentId}`;
}
---

<div class="glass-card p-5 h-full">
  <!-- Header -->
  <div class="flex items-center justify-between mb-5">
    <div class="flex items-center gap-2">
      <svg class="w-5 h-5 text-hb-orange-main" viewBox="0 0 24 24" fill="currentColor">
        <path d="M13.5.67s.74 2.65.74 4.8c0 2.06-1.35 3.73-3.41 3.73-2.07 0-3.63-1.67-3.63-3.73l.03-.36C5.21 7.51 4 10.62 4 14c0 4.42 3.58 8 8 8s8-3.58 8-8C20 8.61 17.41 3.8 13.5.67zM11.71 19c-1.78 0-3.22-1.4-3.22-3.14 0-1.62 1.05-2.76 2.81-3.12 1.77-.36 3.6-1.21 4.62-2.58.39 1.29.59 2.65.59 4.04 0 2.65-2.15 4.8-4.8 4.8z" />
      </svg>
      <h2 class="text-sm font-bold text-white uppercase tracking-wide">Trending</h2>
    </div>
    <Badge variant="live-dark">Live</Badge>
  </div>

  <!-- Loading state -->
  {isLoading && (
    <div class="flex justify-center py-8">
      <div class="w-8 h-8 border-2 border-hb-orange-main border-t-transparent rounded-full animate-spin"></div>
    </div>
  )}

  <!-- Items -->
  {!isLoading && (
    <div class="flex flex-col">
      {items.map((item) => (
        <a
          href={getTenantUrl(item)}
          target="_blank"
          rel="noopener noreferrer"
          class="py-3 border-b border-white/5 last:border-b-0 cursor-pointer transition-all duration-200 hover:bg-white/[0.03] -mx-3 px-3 rounded-lg"
        >
          <div class="flex items-start justify-between gap-2 mb-1.5">
            <h3 class="text-[14px] font-semibold text-white/80 leading-snug flex-1 hover:text-white transition-colors">
              {item.title}
            </h3>
            {item.hot && <Badge variant="hot-dark">HOT</Badge>}
          </div>
          <div class="flex items-center justify-between">
            <span class="text-[12px] text-white/30">by {item.author}</span>
            <div class="flex items-center gap-1 text-white/20">
              <svg class="w-3 h-3" viewBox="0 0 24 24" fill="currentColor">
                <path d="M12 4.5C7 4.5 2.73 7.61 1 12c1.73 4.39 6 7.5 11 7.5s9.27-3.11 11-7.5c-1.73-4.39-6-7.5-11-7.5zM12 17c-2.76 0-5-2.24-5-5s2.24-5 5-5 5 2.24 5 5-2.24 5-5 5zm0-8c-1.66 0-3 1.34-3 3s1.34 3 3 3 3-1.34 3-3-1.34-3-3-3z" />
              </svg>
              <span class="text-[11px]">{item.views}</span>
            </div>
          </div>
        </a>
      ))}
    </div>
  )}
</div>
