---
interface Props {
  maxWidth?: string;
  showValueProps?: boolean;
}

const { maxWidth = '1400px', showValueProps = true } = Astro.props;
---

<footer class="bg-[var(--hb-bg-secondary)] border-t border-[var(--hb-border)] py-8">
  <div class={`max-w-[${maxWidth}] mx-auto px-6`}>
    {showValueProps && (
      <div class="flex flex-wrap items-center justify-center gap-8 mb-6">
        <div class="flex items-center gap-2">
          <svg class="w-[18px] h-[18px] text-green-400" viewBox="0 0 24 24" fill="currentColor">
            <path d="M12 1L3 5v6c0 5.55 3.84 10.74 9 12 5.16-1.26 9-6.45 9-12V5l-9-4zm-2 16l-4-4 1.41-1.41L10 14.17l6.59-6.59L18 9l-8 8z" />
          </svg>
          <span class="text-[13px] text-[var(--hb-text-tertiary)] font-medium">Verified publisher curation</span>
        </div>
        <div class="flex items-center gap-2">
          <svg class="w-[18px] h-[18px] text-hb-orange-main" viewBox="0 0 24 24" fill="currentColor">
            <path d="M11 21h-1l1-7H7.5c-.58 0-.57-.32-.38-.66.19-.34.05-.08.07-.12C8.48 10.94 10.42 7.54 13 3h1l-1 7h3.5c.49 0 .56.33.47.51l-.07.15C12.96 17.55 11 21 11 21z" />
          </svg>
          <span class="text-[13px] text-[var(--hb-text-tertiary)] font-medium">Real-time intelligence updates</span>
        </div>
        <div class="flex items-center gap-2">
          <svg class="w-[18px] h-[18px] text-[var(--hb-text-muted)]" viewBox="0 0 24 24" fill="currentColor">
            <path d="M18 8h-1V6c0-2.76-2.24-5-5-5S7 3.24 7 6v2H6c-1.1 0-2 .9-2 2v10c0 1.1.9 2 2 2h12c1.1 0 2-.9 2-2V10c0-1.1-.9-2-2-2zm-6 9c-1.1 0-2-.9-2-2s.9-2 2-2 2 .9 2 2-.9 2-2 2zm3.1-9H8.9V6c0-1.71 1.39-3.1 3.1-3.1 1.71 0 3.1 1.39 3.1 3.1v2z" />
          </svg>
          <span class="text-[13px] text-[var(--hb-text-tertiary)] font-medium">Exclusive subscriber access</span>
        </div>
      </div>
    )}

    <div class="flex flex-wrap items-center justify-between gap-4">
      <div class="flex items-center gap-2">
        <img src="/images/logos/heartbeatLogoBlack.svg" alt="Heartbeat" class="h-5 opacity-40 logo-theme-aware" width="70" height="20" />
        <span class="text-[13px] text-[var(--hb-text-muted)]">&copy; 2025 Heartbeat Intelligence</span>
      </div>
      <div class="flex items-center gap-6">
        <a href="#" class="text-[13px] text-[var(--hb-text-muted)] hover:text-[var(--hb-text-secondary)] transition-colors">Privacy</a>
        <a href="#" class="text-[13px] text-[var(--hb-text-muted)] hover:text-[var(--hb-text-secondary)] transition-colors">Terms</a>
        <a href="mailto:human@heartbeatintel.com" class="text-[13px] text-[var(--hb-text-muted)] hover:text-[var(--hb-text-secondary)] transition-colors">Contact</a>
      </div>
    </div>
  </div>
</footer>
