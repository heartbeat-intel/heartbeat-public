---
import Badge from '../ui/Badge.astro';
import Avatar from '../ui/Avatar.astro';

interface Props {
  title: string;
  description: string;
  authorName: string;
  authorAvatar?: string;
  subscribers: number;
  isHot?: boolean;
  href: string;
}

const { title, description, authorName, authorAvatar, subscribers, isHot = false, href } = Astro.props;
---

<a href={href} class="group block glass-card p-5 h-full">
  <!-- Header -->
  <div class="flex items-center justify-between mb-3">
    <div class="flex items-center gap-2">
      <svg class="w-4 h-4 text-hb-orange-main" viewBox="0 0 24 24" fill="currentColor">
        <path d="M3 13h2v-2H3v2zm0 4h2v-2H3v2zm0-8h2V7H3v2zm4 4h14v-2H7v2zm0 4h14v-2H7v2zM7 7v2h14V7H7z" />
      </svg>
      <span class="text-[11px] text-white/30 font-semibold uppercase tracking-wide">Intel List</span>
    </div>
    {isHot && <Badge variant="hot-dark">HOT</Badge>}
  </div>

  <!-- Title -->
  <h3 class="text-[17px] font-bold text-white mb-2 leading-snug group-hover:text-hb-orange-3 transition-colors">
    {title}
  </h3>
  <p class="text-sm text-white/40 leading-relaxed line-clamp-2 mb-4">{description}</p>

  <!-- Footer -->
  <div class="flex items-center justify-between mt-auto">
    <div class="flex items-center gap-2">
      {authorAvatar ? (
        <Avatar src={authorAvatar} alt={authorName} size="sm" />
      ) : (
        <div class="w-5 h-5 rounded-full bg-white/10 flex items-center justify-center">
          <span class="text-[9px] font-bold text-white/50">{authorName.charAt(0)}</span>
        </div>
      )}
      <span class="text-xs text-white/40">{authorName}</span>
    </div>
    <div class="flex items-center gap-1 text-white/30">
      <svg class="w-3.5 h-3.5" viewBox="0 0 24 24" fill="currentColor">
        <path d="M16 11c1.66 0 2.99-1.34 2.99-3S17.66 5 16 5c-1.66 0-3 1.34-3 3s1.34 3 3 3zm-8 0c1.66 0 2.99-1.34 2.99-3S9.66 5 8 5C6.34 5 5 6.34 5 8s1.34 3 3 3zm0 2c-2.33 0-7 1.17-7 3.5V19h14v-2.5c0-2.33-4.67-3.5-7-3.5zm8 0c-.29 0-.62.02-.97.05 1.16.84 1.97 1.97 1.97 3.45V19h6v-2.5c0-2.33-4.67-3.5-7-3.5z" />
      </svg>
      <span class="text-xs">{subscribers.toLocaleString()}</span>
    </div>
  </div>
</a>
