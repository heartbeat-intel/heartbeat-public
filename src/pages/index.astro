---
import BaseLayout from '../layouts/BaseLayout.astro';
import VideoPlayer from '../components/react/VideoPlayer';
---

<BaseLayout title="Heartbeat Intelligence">
  <main>
    <!-- Header -->
    <header class="border-b border-hb-gray-6">
      <div class="w-[75%] mx-auto min-h-14 flex items-center">
        <a href="/">
          <img src="/images/logos/heartbeatLogoBlack.svg" alt="Heartbeat" class="h-7" width="150" height="28" />
        </a>
      </div>
    </header>

    <!-- Hero Section -->
    <section class="border-b border-hb-gray-6">
      <div class="w-[75%] mx-auto flex">
        <div class="py-12 w-full lg:w-3/4">
          <h1 class="text-5xl font-bold text-hb-black-1 tracking-tight leading-tight">
            If it were a fact,
          </h1>
          <h1 class="text-5xl font-bold text-hb-black-1 tracking-tight leading-tight">
            it wouldn't be called <span class="text-hb-orange-main">intelligence</span>
          </h1>
          <p class="text-2xl text-hb-black-1 tracking-tight mt-4 max-w-[95%]">
            Welcome to Heartbeat, a technology layer designed to traffic in intelligence.
          </p>
          <div class="pt-6">
            <VideoPlayer client:visible buttonStyle="minimal" />
          </div>
        </div>
        <!-- Vertical divider (desktop only) -->
        <div class="hidden lg:block w-px bg-gradient-to-b from-transparent via-hb-gray-6 to-hb-gray-6"></div>
      </div>
    </section>

    <!-- Explore Live Accounts Section -->
    <section>
      <div class="w-[75%] mx-auto flex">
        <!-- Vertical divider -->
        <div class="w-px bg-gradient-to-t from-transparent via-hb-gray-6 to-hb-gray-6"></div>
        <div class="py-12 w-full pl-8 lg:pl-16">
          <h2 class="text-3xl font-bold text-hb-black-1 tracking-tight">
            Explore live accounts
          </h2>
          <p class="text-base text-hb-black-1 tracking-tight mt-2">
            Setup your own Heartbeat and start monetizing your private intelligence.
          </p>

          <!-- Cards Grid -->
          <div class="grid grid-cols-1 lg:grid-cols-3 gap-4 pt-8">
            <!-- Heartbeat Open Card -->
            <a href="https://open.heartbeatintel.com/" target="_blank" rel="noopener noreferrer"
               class="block border border-hb-gray-6 rounded-lg p-8 hover:shadow-hb-sm transition-shadow">
              <div class="flex items-center gap-2 mb-2">
                <img src="/images/logos/heartbeatOpenLogo.svg" alt="" class="h-6" width="26" height="26" />
                <span class="text-xl font-semibold tracking-tight">Heartbeat Open</span>
              </div>
              <p class="text-base text-hb-gray-2 tracking-tight mb-8">
                Intel for everyone.
              </p>
              <span class="inline-flex items-center gap-2 bg-hb-black-1 text-white px-4 py-2 rounded text-sm font-medium">
                Explore
                <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                </svg>
              </span>
            </a>

            <!-- PIRQUE Card -->
            <a href="https://pirque.heartbeatintel.com/" target="_blank" rel="noopener noreferrer"
               class="block border border-hb-gray-6 rounded-lg p-8 hover:shadow-hb-sm transition-shadow">
              <div class="flex items-center gap-2 mb-2">
                <img src="/images/logos/pirqueLogoBlack.svg" alt="" class="h-6" width="26" height="26" />
                <span class="text-xl font-semibold tracking-tight">P I R Q U E</span>
              </div>
              <p class="text-base text-hb-gray-2 tracking-tight mb-8">
                USA startup economy.
              </p>
              <span class="inline-flex items-center gap-2 bg-hb-black-1 text-white px-4 py-2 rounded text-sm font-medium">
                Explore
                <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                </svg>
              </span>
            </a>

            <!-- Book Demo Card -->
            <a href="mailto:human@heartbeatintel.com"
               class="block border-2 border-dashed border-hb-orange-main bg-hb-orange-4 rounded-lg p-8 flex flex-col items-center justify-center text-center hover:opacity-90 transition-opacity">
              <svg class="w-6 h-6 text-hb-orange-main mb-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
              </svg>
              <span class="text-sm font-bold text-hb-orange-main">
                Book a demo to start your setup.
              </span>
            </a>
          </div>
        </div>
      </div>
    </section>
  </main>
</BaseLayout>
